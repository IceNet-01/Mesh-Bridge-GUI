{
  "name": "meshtastic-bridge-gui",
  "version": "0.25.11.2",
  "description": "Modern PWA for managing Meshtastic-only radio bridge relay stations",
  "type": "module",
  "author": "Northern Plains IT, LLC and OnyxVZ, LLC (IceNet-01)",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "vite preview --host",
    "bridge": "node bridge-server/index.mjs",
    "start": "npm run bridge & npm run dev",
    "production": "npm run build && node bridge-server/index.mjs",
    "deploy": "bash scripts/deploy-production.sh",
    "cleanup-ports": "bash scripts/cleanup-ports.sh 8080",
    "service:install": "bash scripts/install-service.sh",
    "service:uninstall": "bash scripts/uninstall-service.sh",
    "service:start": "systemctl start meshtastic-bridge",
    "service:stop": "systemctl stop meshtastic-bridge",
    "service:restart": "systemctl restart meshtastic-bridge",
    "service:status": "systemctl status meshtastic-bridge",
    "service:logs": "journalctl -u meshtastic-bridge -f",
    "service:enable": "systemctl enable meshtastic-bridge",
    "service:disable": "systemctl disable meshtastic-bridge"
  },
  "dependencies": {
    "@meshtastic/core": "^2.6.7",
    "@meshtastic/transport-node-serial": "^0.0.2",
    "@types/leaflet": "^1.9.21",
    "buffer": "^6.0.3",
    "leaflet": "^1.9.4",
    "mqtt": "^5.14.1",
    "nodemailer": "^7.0.10",
    "react-leaflet": "^4.2.1",
    "recharts": "^2.13.3",
    "serialport": "^13.0.0",
    "stream-browserify": "^3.0.0",
    "ws": "^8.18.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^0.20.5",
    "workbox-window": "^7.3.0"
  }
}
