{
  "name": "meshtastic-bridge-gui",
  "version": "1.0.0",
  "description": "Modern desktop GUI for Meshtastic radio bridge relay station",
  "main": "dist/main/main.js",
  "author": "IceNet-01",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build": "npm run build:renderer && npm run build:main",
    "start": "electron .",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "@meshtastic/js": "2.6.0-0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "recharts": "^2.10.3",
    "serialport": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0"
  },
  "build": {
    "appId": "com.icenet.meshtastic-bridge",
    "productName": "Meshtastic Bridge GUI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "IceNet-01",
      "repo": "Mesh-Bridge-GUI"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.utilities"
    }
  }
}
